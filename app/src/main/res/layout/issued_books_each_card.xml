<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        app:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="220sp"
                android:layout_height="120sp"
                android:text="practical approach to data structures and algorithms,and analysis "
                android:textAllCaps="true"
                android:textSize="20sp"
                android:id="@+id/book_name"

                />

           <!-- <TextView
                android:id="@+id/days_rem_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/book_name"
                android:layout_alignBottom="@id/book_name"
                android:layout_marginLeft="32sp"
                android:layout_marginStart="32sp"
                android:layout_toEndOf="@id/book_name"
                android:layout_toRightOf="@id/book_name"
                android:text="Days Remaining:"

                />-->

            <TextView
                android:id="@+id/days_rem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text=""
                android:textSize="20sp"


                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/publication_textview"
                android:textSize="15sp"
                android:text="Publication:"
                android:layout_below="@id/book_name"
                />


            <TextView
                android:id="@+id/publication_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="Jamnadas Publiactions"
                android:layout_below="@id/publication_textview"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/auth_name_textview"
                android:layout_marginTop="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Author:"
                android:layout_below="@id/publication_name"
                />
            <TextView
                android:id="@+id/auth_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rema thereja"
                android:layout_below="@id/auth_name_textview"
                android:textSize="18sp"
                android:textAllCaps="true"
                />

            <Button
                android:id="@+id/reissue_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/publication_name"
                android:background="@drawable/rounded_corner"
                android:elevation="5dp"
                android:padding="5dp"
                android:layout_marginLeft="20sp"
                android:text="RE-Issue" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp"
                app:contentPadding="5dp"
                android:layout_below="@id/auth_name"
                android:background="#2b2b2b"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Due Date:"
                        android:id="@+id/duedate_textview"
                        android:paddingLeft="12dp"
                        />

                    <TextView
                        android:id="@+id/duedate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/duedate_textview"
                        android:text="12/06/2018"
                        android:textSize="18sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/renew_counter_textview"
                        android:layout_toEndOf="@id/duedate_textview"
                        android:layout_toRightOf="@id/duedate_textview"
                        android:text="Renew Counter"
                        android:paddingLeft="45sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/renew_count"
                        android:layout_below="@id/renew_counter_textview"
                        android:layout_toRightOf="@id/duedate"
                        android:paddingLeft="55sp"
                        android:text="3"
                        android:textSize="18sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/renew_counter_textview"
                        android:paddingLeft="40sp"
                        android:text="Fine Amount"
                        android:id="@+id/fine_textview"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_toRightOf="@id/renew_counter_textview"
                        android:paddingLeft="60sp"
                        android:text="12 Rs"
                        android:layout_below="@id/fine_textview"
                        />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>