<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view"
        android:padding="@dimen/cardview_default_elevation"
        android:layout_margin="@dimen/cardview_default_elevation"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        app:cardElevation="@dimen/cardview_default_elevation"
        android:background="@color/cardview_light_background">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linear_layout"
            android:background="@color/cardview_light_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:textSize="@dimen/name_dim"
                android:text=""
                android:textAllCaps="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/name_margin"
                android:textStyle="bold"
                android:textColor="@color/name_colour"
                />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/card_view_nested"
                android:layout_below="@id/name"
                android:padding="@dimen/cardview_default_elevation"
                android:layout_margin="@dimen/cardview_default_elevation"
                app:cardCornerRadius="@dimen/cardview_default_radius"
                app:cardElevation="@dimen/cardview_default_elevation"
                android:background="@color/iron">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/iron">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/rel_lay_margin"
                        android:id="@+id/relative_1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/due_date_tv"
                            android:text="@string/due_date_text"
                           android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textSize="@dimen/sub_heads_size"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/fine_amt_tv"
                            android:layout_centerInParent="true"
                            android:text="@string/fine_amt_text"
                            android:textSize="@dimen/sub_heads_size"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/renew_count_tv"
                            android:text="@string/counter_text"
                            android:layout_alignParentRight="true"
                            android:textStyle="bold"
                            android:textSize="@dimen/sub_heads_size"
                            android:layout_alignParentEnd="true" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relative_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/rel_lay_margin"
                        android:layout_below="@id/relative_1"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/due_date"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:textSize="@dimen/data_size"
                            android:textColor="@color/due_date_colour"
                            android:text=""
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:textSize="@dimen/data_size"
                            android:id="@+id/fine_amt"
                            android:textColor="@color/fine_colour"
                            android:text=""
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/re_issue_counter"
                            android:textSize="@dimen/data_size"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/counter_colour"
                            android:text=""
                            android:paddingRight="@dimen/counter_right_buffer"
                            android:paddingEnd="@dimen/counter_right_buffer"
                            />

                    </RelativeLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_view_nested">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/re_issue_button"
                    android:text="@string/re_issue_text"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    />

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>